<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLayout"
    tools:context=".LobbyActivity">


    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="840dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLobbyTop"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:fontFamily="sans-serif-medium"
                android:text="11조 SNS 앱"
                android:textColor="@color/tvColor"
                android:textSize="24sp" />

            <FrameLayout
                android:layout_width="114dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <ImageView
                android:id="@+id/ivmyPage"
                android:layout_width="31dp"
                android:layout_height="38dp"
                app:srcCompat="@drawable/ivmypage" />

            <FrameLayout
                android:layout_width="14dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <ImageView
                android:id="@+id/btnSetUp"
                android:layout_width="35dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/ivsetup" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="106dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivToDetail1"
                            android:layout_width="87dp"
                            android:layout_height="84dp"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/circle"
                            android:src="@drawable/test1_user_image" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivToDetail2"
                            android:layout_width="82dp"
                            android:layout_height="84dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/test"
                            app:srcCompat="@drawable/profilecircle" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivToDetail3"
                            android:layout_width="90dp"
                            android:layout_height="84dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/test"
                            app:srcCompat="@drawable/profilecircle" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivToDetail4"
                            android:layout_width="90dp"
                            android:layout_height="84dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/test"
                            app:srcCompat="@drawable/profilecircle" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivToDetail5"
                            android:layout_width="90dp"
                            android:layout_height="84dp"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/test"
                            app:srcCompat="@drawable/profilecircle" />
                    </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImage"
                        android:layout_width="42dp"
                        android:layout_height="45dp"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/profilecircle" />

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="306dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="아이디"
                        android:textColor="@color/tvColor" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivPostImage"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    app:srcCompat="@drawable/imagerectangle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImage2"
                        android:layout_width="42dp"
                        android:layout_height="45dp"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/profilecircle" />

                    <TextView
                        android:id="@+id/tvId2"
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="아이디"
                        android:textColor="@color/tvColor" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivPostImage3"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    app:srcCompat="@drawable/imagerectangle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImage3"
                        android:layout_width="42dp"
                        android:layout_height="45dp"
                        android:src="@drawable/test"
                        app:srcCompat="@drawable/profilecircle" />

                    <TextView
                        android:id="@+id/tvId3"
                        android:layout_width="205dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="아이디"
                        android:textColor="@color/tvColor" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivPostImage2"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/imagerectangle" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>